<?xml version="1.0" encoding="UTF-8"?>

<!--
    SVN        : $Id$
    Author     : James Kennard
    Description: JForm Descriptor
    Package    : Helpdesk
-->

<form>
    <fields labelfield="name">
        <field
                id="id"
                name="id"
                type="hidden"
                label="Content_Id_Label"
                size="10"
                default="0"
                required="true"
                readonly="true" />
        <field
                id="name"
                name="name"
                type="text"
                label="NAME"
                description="JField_Name_Desc"
                class="inputbox"
                size="60"
                required="true" />
        <field
                id="description"
                name="description"
                type="editor"
                class="inputbox"
                label="DESCRIPTION"
                description="JField_Description_Desc"
                filter="safehtml"
                buttons="false"
                readonly="true"
                readonlymode="textarea"
                default="" />
    </fields>
    <fields
            group="state"
            label="WHD_R:STATE"
            position="detail">
        <field
                id="priority"
                name="priority"
                type="sql"
                query="SELECT * FROM #__whelpdesk_request_priorities"
                key_field="id"
                value_field="name"
                class="inputbox"
                label="WHD_RP:PRIORITY"
                description="WHD_RP:PRIORITY DESCRIPTION"
                filter="intval" />
        <field
                name="parent_id"
                type="requestcategory"
                label="WHD_RC:CATEGORY"
                description="WHD_RC:CATEGORY DESCRIPTION"
                class="inputbox"/>
        <field
                id="status"
                name="status"
                type="list"
                class="inputbox"
                label="WHD_R:STATUS"
                description="WHD_R:STATUS DESCRIPTION"
                filter="intval">
            <option value="1">WHD_R:STATUS:OPEN</option>
            <option value="2">WHD_R:STATUS:REOPENED</option>
            <option value="2">WHD_R:STATUS:CLOSED</option>
            <option value="2">WHD_R:STATUS:ARCHIVED</option>
        </field>
    </fields>
    <fields
            group="history"
            label="WHD_RH:HISTORY"
            position="detail">
        <field
                id="history"
                name="id"
                type="requesthistory"
                class="readonly"
                label="WHD_RH:HISTORY"
                description="WHD_RH:HISTORY DESCRIPTION"
                size="18"
                readonly="true"
                filter="unset" />
    </fields>
</form>
