<!DOCTYPE root [
  <!ENTITY requestState SYSTEM "@EXTERNAL_ENTITY_ROOT@forms/request_state.xml">
]>

<form>
    <fields labelfield="name">
        <field
                id="id"
                name="id"
                type="hidden"
                label="Content_Id_Label"
                size="10"
                default="0"
                required="true"
                readonly="true" />
        <field
                id="name"
                name="name"
                type="text"
                label="NAME"
                description="JField_Name_Desc"
                class="inputbox"
                size="60"
                required="true" />
        <field
                id="description"
                name="description"
                type="editor"
                class="inputbox"
                label="DESCRIPTION"
                description="JField_Description_Desc"
                filter="safehtml"
                buttons="false" />
    </fields>
    &requestState;
</form>
