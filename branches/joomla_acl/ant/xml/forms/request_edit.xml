<!DOCTYPE root [
  <!ENTITY publishing SYSTEM "@EXTERNAL_ENTITY_ROOT@forms/publishing.xml">
  <!ENTITY requestState SYSTEM "@EXTERNAL_ENTITY_ROOT@forms/request_state.xml">
]>

<form>
    <fields labelfield="name">
        <field
                id="id"
                name="id"
                type="hidden"
                label="Content_Id_Label"
                size="10"
                default="0"
                required="true"
                readonly="true" />
        <field
                id="name"
                name="name"
                type="text"
                label="NAME"
                description="JField_Name_Desc"
                class="inputbox"
                size="60"
                required="true" />
        <field
                id="description"
                name="description"
                type="textonly"
                class="inputbox whdTextarea"
                label="DESCRIPTION"
                description="JField_Description_Desc"
                html="true" />
    </fields>
    &requestState;
    &publishing;
    <fields
            group="history"
            label="WHD_RH:HISTORY"
            position="detail">
        <field
                id="history"
                name="id"
                type="requesthistory"
                class="readonly"
                label="WHD_RH:HISTORY"
                description="WHD_RH:HISTORY DESCRIPTION"
                size="18"
                readonly="true"
                filter="unset" />
    </fields>
</form>
