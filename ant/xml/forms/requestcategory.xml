<!DOCTYPE root [
  <!ENTITY publishing SYSTEM "@EXTERNAL_ENTITY_ROOT@forms/publishing.xml">
]>

<form>
    <fields name="normal">
        <fieldset labelfield="name" name="requestcategory">
            <field
                    id="id"
                    name="id"
                    type="hidden"
                    label="Content_Id_Label"
                    size="10"
                    default="0"
                    required="true"
                    readonly="true" />
            <field
                    id="name"
                    name="name"
                    type="text"
                    label="WHD_RC:Name"
                    description="JField_Name_Desc"
                    class="inputbox"
                    size="30"
                    required="true" />
            <field
                    id="alias"
                    name="WHD_RC:ALIAS"
                    type="text"
                    label="ALIAS"
                    description="JField_Alias_Desc"
                    class="inputbox"
                    size="45"
                    default="" />
            <field
                    id="state"
                    name="state"
                    type="list"
                    label="JField_Published_Label"
                    description="JField_Published_Desc"
                    class="inputbox"
                    filter="intval"
                    size="1"
                    default="1">
                <option value="1">JOption_Published</option>
                <option value="0"> JOption_UnPublished</option>
            </field>
            <field
                    name="parent_id"
                    type="requestcategoryparent"
                    label="WHD_DATA:PARENT"
                    description="WHD_DATA:PARENT DESCRIPTION"
                    class="inputbox"/>
            <field
                    id="ordering"
                    name="ordering"
                    type="text"
                    label="JField_Ordering_Label"
                    description="JField_Ordering_Desc"
                    class="inputbox"
                    size="6"
                    default="0" />
            <field
                    id="description"
                    name="description"
                    type="editor"
                    class="inputbox"
                    label="WHD_RC:DESCRIPTION"
                    description="WHD_RC:DESCRIPTION DESCRIPTION"
                    filter="safehtml"
                    buttons="false"
                    default="" />
        </fieldset>
    </fields>
    <fields name="detail">
        &publishing;
        <fieldset labelfield="WHD_DATA:METADATA" name="metadata">
            <field
                    id="metakey"
                    name="metakey"
                    type="textarea"
                    label="JField_Meta_Keywords_Label"
                    description="JField_Meta_Keywords_Desc"
                    class="inputbox"
                    rows="3"
                    cols="30"
                    default="" />
            <field
                    id="metadesc"
                    name="metadesc"
                    type="textarea"
                    label="JField_Meta_Description_Label"
                    description="JField_Meta_Description_Desc"
                    class="inputbox"
                    rows="3"
                    cols="30"
                    default="" />
        </fieldset>
        <fieldset label="WHD_ACCESS:RULES" name="access rules">
            <field
                    id="rules"
                    name="rules"
                    type="rules"
                    label="Content_Rules_Label"
                    description="Content_Rules_Desc"
                    class="inputbox"
                    filter="rules"
                    component="com_whelpdesk"
                    section="requestcategory"
                    default="" />
        </fieldset>
    </fields>
</form>