<?xml version="1.0" encoding="UTF-8"?>

<!--
    SVN        : $Id$
    Author     : James Kennard
    Description: JForm Descriptor
    Package    : Helpdesk
-->

<form>
    <fields labelfield="name">
        <field
                id="id"
                name="id"
                type="hidden"
                label="Content_Id_Label"
                size="10"
                default="0"
                required="true"
                readonly="true" />
        <field
                id="name"
                name="name"
                type="text"
                label="NAME"
                description="JField_Name_Desc"
                class="inputbox"
                size="30"
                required="true" />
        <field
                id="state"
                name="state"
                type="list"
                label="JField_Published_Label"
                description="JField_Published_Desc"
                class="inputbox"
                filter="intval"
                size="1"
                default="1">
            <option value="1">JOption_Published</option>
            <option value="0"> JOption_UnPublished</option>
        </field>
        <field
                id="ordering"
                name="ordering"
                type="text"
                label="JField_Ordering_Label"
                description="JField_Ordering_Desc"
                class="inputbox"
                size="6"
                default="0" />
        <field
                id="colour"
                name="colour"
                type="colourpalette"
                label="WHD_DATA:COLOUR"
                description="WHD_DATA:COLOUR DESCRIPTION"
                class="inputbox"
                size="6"
                default="0" />
        <field
                id="description"
                name="description"
                type="editor"
                class="inputbox"
                label="DESCRIPTION"
                description="JField_Description_Desc"
                filter="safehtml"
                buttons="false"
                default="" />
    </fields>
    <fields
            group="publishing"
            label="WHD_DATA:PUBLISHING DETAILS"
            position="detail">
        <field
                id="created"
                name="created"
                type="formatteddate"
                class="readonly"
                label="WHD_DATA:CREATED"
                description="WHD_DATA:CREATED DESCRIPTION"
                size="25"
                readonly="true"
                filter="unset" />
        <field
                id="created_by"
                name="created_by"
                type="wuser"
                class="readonly"
                label="WHD_DATA:CREATED BY"
                description="WHD_DATA:CREATED BY DESCRIPTION"
                size="25"
                readonly="true"
                filter="unset" />
        <field
                id="modified"
                name="modified"
                type="formatteddate"
                class="readonly"
                label="WHD_DATA:MODIFIED"
                description="WHD_DATA:MODIFIED DESCRIPTION"
                size="25"
                readonly="true"
                filter="unset" />
        <field
                id="revised"
                name="revised"
                type="text"
                class="readonly"
                label="WHD_DATA:REVISION"
                description="WHD_DATA:REVISION DESCRIPTION"
                size="6"
                default="0" />
    </fields>
</form>
